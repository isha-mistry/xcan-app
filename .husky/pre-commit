#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# âœ… Check lowercase branch name
branch="$(git symbolic-ref --short HEAD)"
if ! echo "$branch" | grep -qE '^[a-z0-9/_\-]+$'; then
  echo "âŒ Branch name must be lowercase only. Current: $branch"
  exit 1
fi

# âœ… ESLint check
echo "ğŸ”§ Running ESLint..."
yarn eslint . --ext .ts,.tsx
if [ $? -ne 0 ]; then
  echo "âŒ ESLint check failed."
  exit 1
fi

# âœ… Run tests
# echo "ğŸ§ª Running tests..."
# yarn test

